<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_setupyourplan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Setup your plan"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_change_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_setupyourplan"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="You can change the mode anytime in the settings"
        android:textColor="#000000"
        android:textSize="14sp" />


    <RelativeLayout
        android:id="@+id/rl_setup_wizard"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tv_change_mode"
        android:layout_margin="10dp"
        android:background="@drawable/bg_rectangle">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/pie_chart_img" />


        <TextView
            android:id="@+id/tv_setupwizard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Setup Wizard"
            android:textColor="#ffffff"
            android:textSize="18sp" />


        <View
            android:id="@+id/vw_setupwizard"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_below="@+id/tv_setupwizard"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="#ffffff" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vw_setupwizard"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="RECOMMENDED"
            android:textColor="#ffffff" />

    </RelativeLayout>


</RelativeLayout>